libuv/uv.a:
  
  (cd libuv && make $(MAKEFLAGS))

bdwgc/.libs/libgc.a: 
  
  (cd bdwgc && \
    rm -Rf libatomic_ops && \
    ln -s ../libatomic_ops && \
    ./configure --disable-shared && \
    make $(MAKEFLAGS))

lua/src/liblua.a:
  
  (cd lua && \
    make clean && \
    make $(MAKEFLAGS) TO_LIB=liblua.a linux)

